<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    android:columnCount="1"
    android:layout_row="3"
    tools:context=".Main_menu">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/layout_activity_staff_bejelentkezes"
        android:id="@+id/btn_login"
        android:onClick="startLogin"
        android:background="@color/zxing_transparent"

        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="end|top"
        />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:id="@+id/imageView"
        android:background="@drawable/brask_logo2"

        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="@string/layout_activity_guest_main_menu_etlap"
            android:id="@+id/btn_meal"
            android:background="@drawable/button_color"

            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="@string/layout_activity_guest_main_menu_asztal_azonositas"
            android:id="@+id/btn_tables"
            android:background="@drawable/button_color"

            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="@string/layout_activity_guest_main_menu_megrendeleseim"
            android:id="@+id/btn_order"
            android:background="@drawable/button_color"

            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="@string/layout_activity_guest_main_menu_fizetes"
            android:id="@+id/btn_pay"
            android:background="@drawable/button_color"

            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            />
        </LinearLayout>

</GridLayout>